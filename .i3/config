bindsym $mod+5 workspace 5:R
bindsym $mod+6 workspace 6:X
bindsym $mod+7 workspace 7:EV
bindsym $mod+8 workspace 8:TTP
bindsym $mod+9 workspace 9:~/
bindsym $mod+0 workspace 10

# move focused container to workspace
