order += "tztime local"
wireless wlp2s0 {
#format_up = "Wireless: (%quality at %essid) %ip"
format_up = ":Wireless: on"
format_down = "W: down"
}
ethernet eth0 {
# if you use %speed, i3status requires root privileges
